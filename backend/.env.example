# CollegeOS Backend Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# ⚠️ IMPORTANT: Use the correct path!
# CORRECT: DATABASE_PATH=./database/college_app.db
# WRONG:   DATABASE_PATH=./database.sqlite (OLD PATH - DO NOT USE!)
DATABASE_PATH=./database/college_app.db

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-secret-here-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Google OAuth (Optional - for Google login)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Web Scraping Configuration
SCRAPING_USER_AGENT=CollegeAppBot/1.0
SCRAPING_DELAY_MS=2000
CACHE_TTL_HOURS=24

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# College Scorecard API (US Department of Education)
# Get a free API key at: https://api.data.gov/signup/
# Optional - improves rate limits for API calls
# SCORECARD_API_KEY=your-api-key-here
